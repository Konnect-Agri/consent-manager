generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CARequests {
  id                          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  caId                        String   @db.Uuid @unique
  consent_artifact            Json
  userId                      String
  state                       State    @default(CREATED)
  created_at                  DateTime @default(now())
  created_by                  String
  updated_at                  DateTime?
  updated_by                  String?
  webhook_url                 Json
}

enum State {
  CREATED
  ACCEPT
  DECLINE
  EXPIRED
  REVOKED
}
